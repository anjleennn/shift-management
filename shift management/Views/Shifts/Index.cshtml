@{
    @model IEnumerable<Shift>
    }
    <h2>Shifts</h2>
    <a href="/Shifts/Create">Create New Shift</a>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
                <th>Task</th>
                <th>Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shift in Model)
            {
                <tr>
                    <td>@shift.Date.ToShortDateString()</td>
                    <td>@shift.Time</td>
                    <td>@shift.Location</td>
                    <td>@shift.Task</td>
                    <td>@shift.Rate</td>
                </tr>
            }
        </tbody>
    </table>

}
